#include<stdio.h>    
const int MAX=1e5+10;
conse int MAXCOST=0x7fffffff; 
  
int graph[MAX][MAX];  
  
void prim(int graph[][MAX], int n)  
{  
    int lowcost[MAX];  
    int mst[MAX];  
    int i, j, min, minid, sum = 0;  
    for (i = 2; i <= n; i++)  
    {  
        lowcost[i] = graph[1][i];
        mst[i] = 1;
    }  
    mst[1] = 0;  
    for (i = 2; i <= n; i++)  
    {  
        min = MAXCOST;  
        minid = 0;  
        for (j = 2; j <= n; j++)  
        {  
            if (lowcost[j] < min && lowcost[j] != 0)  
            {  
                min = lowcost[j];
                minid = j; 
            }  
        }  
        printf("V%d-V%d=%d\n",mst[minid],minid,min); 
        sum += min;//求和 
        lowcost[minid] = 0;//该处最短路径置为0 
        for (j = 2; j <= n; j++)
        {  
            if (graph[minid][j] < lowcost[j])
            {  
                lowcost[j] = graph[minid][j];  
                mst[j] = minid;
            }  
        }  
    }  
    printf("最小权值之和=%d\n",sum);
}  
int main()  
{  
    int i, j, k, m, n;  
    int x, y, cost;  
    scanf("%d%d",&m,&n);
    
    for (i = 1; i <= m; i++)
    {  
        for (j = 1; j <= m; j++)  
        {  
            graph[i][j] = MAXCOST;  
        }  
    }   
    for (k = 1; k <= n; k++)  
    {  
    scanf("%d%d%d",&i,&j,&cost);
        graph[i][j] = cost;  
        graph[j][i] = cost;  
    }  
    
    prim(graph, m);  
    return 0;  
}
